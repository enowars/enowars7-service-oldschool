{% extends 'templates/base.twig' %}

{% block content %}
	<div class="grades-container">
		<h1>Your Grades</h1>
		{% if message %}
			<p>{{ message }}</p>
		{% endif %}

		<h2>Upload Grades</h2>
		<form method="post" action="index.php?action=grades" enctype="multipart/form-data" class="grades-form">
			<div class="input-field">
				<label for="grades">Grades:</label>
				<input type="file" name="grades" id="grades" required>
			</div>
			<div class="input-field">
				<input type="submit" class="submit-button" value="Upload">
			</div>
		</form>

		<h2>Your Uploaded Grades</h2>
		<ul class="grades-list">
			{% for grade in grades %}
				<li>
					<h3>{{ grade.filename }}</h3>
					<div class="grade-data">
						{{ grade.content }}
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
